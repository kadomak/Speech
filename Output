#NN for speech patterns hackathon 9/7
import keras
import nltk

#opens a file, breaks it into lines, sentences, and words and prints the parts of speech
file = open("test.txt",'r', encoding="UTF-8")
for line in file:
    #breaks into sentences in line
     tokenizer = nltk.tokenize.punkt.PunktSentenceTokenizer()
     AmountofSentences = tokenizer.tokenize(line)
     for sentence in AmountofSentences:
         #breaks words into parts of speech
         tokens = nltk.word_tokenize(sentence)
         pos = nltk.pos_tag(tokens)
         #print("Parts of Speech: ", nltk.pos_tag(tokens))
         for groups in pos:
             print(groups[1])
     
